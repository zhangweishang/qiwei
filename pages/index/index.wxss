/* pages/index/index.wxss */
/* 导航栏 */
.search-bar {
  position: relative;
  padding: 8px 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background-color: #efeff4;
  border-top: 1rpx solid #d7d6dc;
  border-bottom: 1rpx solid #d7d6dc;
}

.search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  border-radius: 5px;
  background: #fff;
  border: 1rpx solid #e6e6ea;
}

.search-bar__box {
  position: relative;
  padding-left: 30px;
  padding-right: 30px;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}

.icon-search_in-box {
  position: absolute;
  left: 10px;
  top: 7px;
}

.search-bar__input {
  height: 28px;
  line-height: 28px;
  font-size: 14px;
}

.weui-icon-search {
  margin-right: 8px;
  font-size: inherit;
}
/* 分割 */
.weui-search-bar__text {
  display: inline-block;
  font-size: 14px;
  vertical-align: middle;
}

.weui-icon-clear {
  position: absolute;
  top: 0;
  right: 0;
  padding: 7px 8px;
  font-size: 0;
}

.weui-search-bar__label {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 2;
  border-radius: 3px;
  text-align: center;
  color: #9b9b9b;
  background: #fff;
  line-height: 28px;
}

.weui-search-bar__cancel-btn {
  margin-left: 10px;
  line-height: 28px;
  color: #09bb07;
  white-space: nowrap;
}

/* 轮播图 */
.u-wrp-bnr {
  width: 100%;
  height: 300rpx;
  display: block;
  position: relative;
  top: 0;
  background: #f0f0f0;
}
.u-img-slide {
  width: 100%;
  height: inherit;
}
/* 点菜 */
.title{
  line-height: 80rpx;
  text-align: center;
  border-bottom: 1rpx solid #8A8A8A;
}

.indexDetails {
  background: #fff;
  border-bottom: 20rpx solid #f5f5f5;
}

.indexListDetails {
  display: flex;
  height: 200rpx;
  border-bottom: 1rpx solid #f3f3f3;
}

.indexListDetails .productCover {
  flex: 1;
  height:200rpx;
  width:220rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
}
 
.indexListDetails .productCover image {
  width: 200rpx;
  height: 90%;
}
 
.indexListDetails .productInfo {
  flex: 4;
  margin: 20rpx 10px 20px 30rpx;
  font-size:15px; 
}
 
.indexListDetails .productInfo .productTitle {
  font-size:45rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.productDesc{
